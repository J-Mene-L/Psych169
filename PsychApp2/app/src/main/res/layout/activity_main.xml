<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="psych169.psychapp.MainActivity"
    android:gravity="center_horizontal"
    android:background="#fff59d">

    <LinearLayout

        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginBottom="16dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jesusdr"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:textSize="16sp"
            android:layout_weight="2" />

        <EditText
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:textSize="16sp"
            android:background="#fff3e0"
            android:layout_marginBottom="16dp"
            android:gravity="right"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:textSize="16sp"
            android:layout_weight="2" />

        <EditText

            android:id="@+id/PhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="(###) ###-####"
            android:textSize="16sp"
            android:background="#fff3e0"
            android:layout_marginBottom="16dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of Appointment: "
            android:textSize="16sp"/>

        <Spinner

            android:id="@+id/TypeOfAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:background="#fff3e0"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

        </Spinner>

    </LinearLayout>

    <EditText
        android:id="@+id/ReasonForVisit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reason for Visit"
        android:textSize = "16sp"
        android:background = "#fff3e0"
        android:layout_marginBottom="16dp"
        android:maxLength="200"
        android:maxLines="5"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desired Date"

            android:textSize="16sp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="mm"
                android:textSize = "16sp"
                android:background = "#fff3e0"
                android:maxLength="2"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize = "16sp"/>

            <EditText
                android:id="@+id/Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="dd"
                android:textSize = "16sp"
                android:background = "#fff3e0"
                android:maxLength="2"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize = "16sp"/>

            <EditText
                android:id="@+id/Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="yyyy"
                android:textSize = "16sp"
                android:background = "#fff3e0"
                android:maxLength="4"
                android:inputType="number"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desired Time"

            android:textSize="16sp"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textSize = "16sp"
                android:background = "#fff3e0"
                android:maxLength="2"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize = "16sp"/>

            <EditText
                android:id="@+id/Minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textSize = "16sp"
                android:background = "#fff3e0"
                android:maxLength="2"
                android:inputType="number"/>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/ThankYouMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <Button
        android:id="@+id/ConfirmationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        android:fontFamily="sans-serif-condensed"
        android:background="#fff3e0"
        android:onClick="DoTheThing"/>

</LinearLayout>
